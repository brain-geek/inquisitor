!!! 5
%html
  %head
    %title Simple monitoring index page
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}
    %link{:rel => 'stylesheet', :href => 'http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css', :type => 'text/css', :media => 'screen, projection'}
    %link{:rel => 'stylesheet', :href => '/style.css', :type => 'text/css', :media => 'screen, projection'}

  %body
    .container
      .content
        .page-header
          %h1 Index page for app

        #list
          %table
            - @nodes.each do |node|
              %tr
                %td= node.url
                %td= node.name 

        %form{:action => "/new", :method => "post", :id => 'add'}
          %fieldset
            %legend Add new node
            .clearfix
              %label{:for => "node[name]"}Title
              %input{:type => "text", :name => "node[name]", :id => "add-name-field"}
            .clearfix
              %label{:for => "node[url]"}Url
              %input{:type => "text", :name => "node[url]", :id => "add-url-field"}
            .actions
              %input{:type => "submit", :value => "Send", :class => "btn"}
